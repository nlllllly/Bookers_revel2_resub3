<div class="container">
    <div class="row">

        <div class="col-xs-3">
            <h2>User info</h2>
            <%# img %>
            <table class="table">
                <tbody>
                    <tr></tr>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <%= link_to "", edit_user_path(@user.id) ,class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_20819" %>
            </div>


            <h2>New Book</h2>
                <%= form_for @book_new do |f| %>
                    <div class="field row">    
                        <label>Title</label><br>
                        <%= f.text_field :title, class:"col-xs-12" %>
                    </div>
                    <br>
                    <div class="field row">    
                        <label>Opinion</label><br>
                        <%= f.text_area :body, class:"col-xs-12" %>
                    </div>
                    <br>
                    <div class="actions row">
                        <%= f.submit class:"btn btn-primary col-xs-12" %>
                    </div>
                <% end %>
        </div>



        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= @book.title %></td>
                            <td><%= @book.body %></td>
                            <td><%= link_to "Show", book_path(@book.id) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

    </div>
</div>