<%# LEFT SIDEBAR %>
<%= render 'layouts/showsidebar', user: @user %>
        
<%# RIGHT MAINCONTENTS %>
        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @my_books.each do |my_book| %>
                        <tr>
                            <td>
                                <%= link_to user_path(@user.id) do %>
                                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "pull-left profile-thumb", fallback: "no_image-icon.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book_path(my_book.id) do %>
                                    <%= my_book.title %>
                                <% end %>
                            </td>
                            <td><%= my_book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

    </div>
</div>